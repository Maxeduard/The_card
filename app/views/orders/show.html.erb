<%= render 'shared/top' if current_user %>

<div class="container my-5">
  <h1>Your Cart</h1>
  <div class="cards">
    <% total = 0 %>

      <% @order_items.each do |item| %>
        <div class="card">
          <p> <%= item.menu_item.name %> </p>
          <p> <%= item.quantity %> </p>
          <p> <%= amount = item.menu_item.price * item.quantity%> €</p>
          <p> Description: <%= item.menu_item.description %> </p>
          <%= link_to "delete", order_item_path(item), method: :delete %>
          <% total = total + amount %>
        </div>
      <% end %>
      <%= link_to "confirm", order_path(action: "confirmed"), method: :patch %>

  </div>
</div>
<div class="container my-5">
  <h1>Your Order</h1>
  <div class="cards">
    <p>Total: <%= total%>€</p>
  </div>
</div>

<%= render 'shared/flying' if current_user %>
